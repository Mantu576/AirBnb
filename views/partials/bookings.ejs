<% if (isLoggedIn) { %>
  <form action="/checkout" method="GET" class="mt-2">
    <input type="hidden" name="homeId" value="<%= home._id %>">
    
    <div class="grid grid-cols-2 gap-2 mb-2">
      <div>
        <label class="text-sm text-gray-600">Check In</label>
        <input type="date" name="checkIn" required class="w-full border p-1 rounded text-sm">
      </div>

      <div>
        <label class="text-sm text-gray-600">Check Out</label>
        <input type="date" name="checkOut" required class="w-full border p-1 rounded text-sm">
      </div>
    </div>

    <div class="mb-2">
      <label class="text-sm text-gray-600">Guests</label>
      <input type="number" name="guests" min="1" required class="w-full border p-1 rounded text-sm">
    </div>
    <button type="submit" class="bg-blue-500 text-white p-2 w-full rounded hover:bg-blue-600 transition-colors">
      Book Now
    </button>
    <!-- <button type="submit" class="bg-green-500 text-white p-2 w-full rounded hover:bg-green-600 transition-colors">
      Proceed to Checkout
    </button> -->
  </form>
  
<% } else { %>
  <a href="/auth/login" class="block bg-blue-500 text-white text-center p-2 rounded text-sm">
    Login to Book
  </a>
<% } %>

