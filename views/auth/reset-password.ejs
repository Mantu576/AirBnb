<%- include('../partials/head') %>
</head>
<body class="bg-gray-100">
  <%- include('../partials/nav') %>
  <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md max-w-2xl">
    <h1 class="text-3xl font-bold mb-6 text-center text-gray-800 border-b pb-4">Reset Password</h1>
    
    <%- include('../partials/errors') %>
    
    <form action="/reset-password" method="POST" class="max-w-md mx-auto">
      <input type="hidden" name="userId" value="<%= userId %>">
      
      <div class="mb-5">
        <label for="password" class="block text-sm font-medium text-gray-700 mb-1">New Password</label>
        <div class="relative">
          <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500">
            <i class="fas fa-lock"></i>
          </span>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Enter new password"
            class="w-full pl-10 px-4 py-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition"
            required
          />
        </div>
        <p class="text-sm text-gray-500 mt-2">
          Password must contain at least 8 characters, including uppercase, lowercase, number and special character (!@&)
        </p>
      </div>
      
      <button type="submit" class="w-full bg-red-500 text-white py-3 rounded-md hover:bg-red-600 focus:ring-4 focus:ring-red-300 font-medium transition duration-300">
        Update Password
      </button>
    </form>
  </main>
</body>
</html>