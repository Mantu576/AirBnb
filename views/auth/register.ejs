
<%- include ('../partials/head') %>
</head>
<body>
    <%- include ('../partials/nav') %>
    <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md">
        <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Register</h1>
        <form action="/register" method="POST" class="max-w-md mx-auto">
            <input type="hidden" name="id" value="Register" />
            <input
                type="text"
                name="username"
                placeholder="User Name"
                class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>
            <input 
                type="email"
                name="email"
                placeholder="Email"
                class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>
            <input
                type="password"
                name="password"
                placeholder="Password"
                class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>
            <input
                type="password"
                name="confirmPassword"
                placeholder="Confirm Password"
                class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>
            <div class="mb-4">
                <p class="text-gray-700">User Type</p>
                <label class="inline-flex items-center mr-4">
                    <input type="radio" name="userType" value="guest" class="form-radio text-red-500" checked />
                    <span class="ml-2">Guest</span>
                </label>
                <label class="inline-flex items-center">
                    <input type="radio" name="userType" value="host" class="form-radio text-red-500" />
                    <span class="ml-2">Host</span>
                </label>
            </div>
            <div class="mb-4">
                <label class="inline-flex items-center mr-4">
                    <input type="checkbox" name="terms" class="form-checkbox text-red-500" required />
                    <span class="ml-2">I agree to the terms and conditions</span>
                </label>
            </div>
            <input type="submit" value="Register" class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300" />
        </form>
        <div class="text-center mt-4">
            <p class="text-gray-600">Already have an account? <a href="/login" class="text-red-500 hover:underline">Login here</a></p>
        </div>
    </main>
</body>
</html>